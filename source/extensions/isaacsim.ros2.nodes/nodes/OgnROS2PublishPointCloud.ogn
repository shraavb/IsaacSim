{
    "isaacsim.ros2.bridge.ROS2PublishPointCloud": {
        "version": 1,
        "icon": "icons/isaac-sim.svg",
        "description": [
            "This node publishes LiDAR scans as a ROS2 PointCloud2 message"
        ],
        "metadata": {
            "uiName": "ROS2 Publish Point Cloud"
        },
        "categoryDefinitions": "config/CategoryDefinition.json",
        "categories": "isaacRos2:publisher",

        "inputs": {
            "execIn": {
                "type": "execution",
                "description": "The input execution port"
            },
            "context": {
                "type": "uint64",
                "description": "ROS2 context handle, Default of zero will use the default global context",
                "default" : 0
            },
            "nodeNamespace": {
                "type": "string",
                "description": "Namespace of ROS2 Node, prepends any published/subscribed topic by the node namespace",
                "default" : ""
            },
            "frameId": {
                "type": "string",
                "description": "FrameId for ROS2 message",
                "default" : "sim_lidar"
            },
            "topicName": {
                "type": "string",
                "description": "Name of ROS2 Topic",
                "default" : "point_cloud"
            },
             "qosProfile": {
                "type": "string",
                "description": "QoS profile config",
                "default": ""
            },
            "queueSize": {
                "type": "uint64",
                "description": "The number of messages to queue up before throwing some away, in case messages are collected faster than they can be sent. Only honored if 'history' QoS policy was set to 'keep last'. This setting can be overwritten by qosProfile input.",
                "default": 10
            },
            "timeStamp": {
                "type": "double",
                "description": "ROS2 Timestamp in seconds",
                "uiName": "Timestamp",
                "default": 0.0
            },
            "dataPtr": {
                "type": "uint64",
                "description": "Pointer to the buffer data",
                "default": 0
            },
            "data": {
                "type": "pointf[3][]",
                "memoryType": "cpu",
                "description": "Buffer array data, must contain data if dataPtr is null",
                "default": []
            },
            "cudaDeviceIndex": {
                "type": "int",
                "description": "Index of the device where the data lives (-1 for host data)",
                "default": -1
            },
            "bufferSize": {
                "type": "uint",
                "description": "Size (in bytes) of the buffer (0 if the input is a texture)"
            },
            "intensityPtr": {
                "uiName": "intensity",
                "type": "uint64",
                "description": "intensity [0,1]",
                "default": 0
            },
            "intensityDataType": {
                "type": "float",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "intensityBufferSize": {
                "type": "uint64",
                "description": "size",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "timestampPtr": {
                "uiName": "timestamp",
                "type": "uint64",
                "description": "timestamp in ns",
                "default": 0
            },
            "timestampDataType": {
                "type": "uint64",
                "description": "type",
                "default": 8,
                "metadata": {
                    "hidden": "true"
                }
            },
            "timestampBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "emitterIdPtr": {
                "uiName": "emitterId",
                "type": "uint64",
                "description": "emitterId",
                "default": 0
            },
            "emitterIdDataType": {
                "type": "uint",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "emitterIdBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "channelIdPtr": {
                "uiName": "channelId",
                "type": "uint64",
                "description": "channelId",
                "default": 0
            },
            "channelIdDataType": {
                "type": "uint",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "channelIdBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "materialIdPtr": {
                "uiName": "materialId",
                "type": "uint64",
                "description": "materialId at hit location",
                "default": 0
            },
            "materialIdDataType": {
                "type": "uint",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "materialIdBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "tickIdPtr": {
                "uiName": "tickId",
                "type": "uint64",
                "description": "tickId",
                "default": 0
            },
            "tickIdDataType": {
                "type": "uint",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "tickIdBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "hitNormalPtr": {
                "uiName": "normal",
                "type": "uint64",
                "description": "Normal at the hit location",
                "default": 0
            },
            "hitNormalDataType":{
                "type": "float[3]",
                "description": "type",
                "default": [0,0,0],
                "metadata": {
                    "hidden": "true"
                }
            },
            "hitNormalBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "velocityPtr": {
                "uiName": "velocity",
                "type": "uint64",
                "description": "Velocity vector at the hit point (m/s)",
                "default": 0
            },
            "velocityDataType": {
                "type": "float[3]",
                "description": "type",
                "default": [0,0,0],
                "metadata": {
                    "hidden": "true"
                }
            },
            "velocityBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "objectIdPtr": {
                "uiName": "objectId",
                "type": "uint64",
                "description": "ObjectId for getting usd prim information",
                "default": 0
            },
            "objectIdDataType": {
                "type": "uint[]",
                "description": "type",
                "default": [0,0,0,0],
                "metadata": {
                    "hidden": "true"
                }
            },
            "objectIdBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "echoIdPtr": {
                "uiName": "echoId",
                "type": "uint64",
                "description": "echoId",
                "default": 0
            },
            "echoIdDataType": {
                "type": "uchar",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "echoIdBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "tickStatePtr": {
                "uiName": "tickState",
                "type": "uint64",
                "description": "tickState",
                "default": 0
            },
            "tickStateDataType": {
                "type": "uchar",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "tickStateBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            },
            "radialVelocityMSPtr": {
                "uiName": "radialVelocityMS",
                "type": "uint64",
                "description": "radialVelocityMS",
                "default": 0
            },
            "radialVelocityMSDataType": {
                "type": "float",
                "description": "type",
                "default": 0,
                "metadata": {
                    "hidden": "true"
                }
            },
            "radialVelocityMSBufferSize": {
                "type": "uint64",
                "description": "size",
                "metadata": {
                    "hidden": "true"
                }
            }
        }
    }
}
